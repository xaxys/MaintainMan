version: 1.2.0
app:
  name: "maintainman"
  listen: ":8080"
  loglevel: "debug"
  page:
    limit: 100
    default: 50
  hit_expire:
    announce: "12h"
  appraise:
    timeout: "72h"
    purge: "10m"
    default: 5

wechat:
  appid: ""
  secret: ""
  fastlogin: true

token:
  key: "xaxys_2022_all_rights_reserved"
  expire: "30m"

database:
  driver: "mysql"
  mysql:
    host: "localhost"
    port: 3306
    name: "maintainman"
    params: "parseTime=true&loc=Local&charset=utf8mb4"
    user: "root"
    password: "123456"
  sqlite:
    path: "maintainman.db"

storage:
  driver: "local"
  local:
    path: "./images"
  s3:
    access_key: ""
    secret_key: ""
    bucket: ""
    region: ""

cache:
  driver: "local"
  limit: 268435456 # 256M
  redis:
    host: "localhost"
    port: 6379
    password: ""

admin: # only apply at first initialization
  name: "admin"
  display_name: "maintainman default admin"
  role_name: "super_admin"
  password: "12345678"